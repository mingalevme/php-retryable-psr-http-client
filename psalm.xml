<?xml version="1.0"?>
<psalm
    phpVersion="8.0"
    errorLevel="1"
    findUnusedCode="true"
    findUnusedBaselineEntry="true"
>
    <projectFiles>
        <directory name="src" />
        <directory name="tests" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <UnusedClass>
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </UnusedClass>
    </issueHandlers>
</psalm>
